# Portfolio Limits
PORTFOLIO_MAX_IMAGES=10
PORTFOLIO_MAX_FILE_SIZE=5242880
PORTFOLIO_ALLOWED_TYPES=jpeg,jpg,png,webp

# OAuth Configuration
