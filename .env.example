PORT=3000
NODE_ENV=development

DB_HOST=localhost
DB_USER=
DB_PASS=
DB_NAME=
DB_PORT=5432

# test database
DB_TEST_NAME=

AUTH_SECRET=
JWT_SECRET=

# Portfolio Configuration
